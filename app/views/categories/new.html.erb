<h1 class="text-center">Create New Category</h1>

<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-xs-12">

    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>

    <% end %>

    <div class="row">
      <div class="col-sm-10 col-sm-offset-2">
        <%= link_to "Cancel", categories_path %>
      </div>
    </div>

  </div>
</div>
